<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/fuettern"
        android:layout_width="150px"
        android:layout_height="80px"
        android:layout_marginStart="100px"
        android:layout_marginTop="900px"
        android:text="Füttern" />

    <Button
        android:id="@+id/schlafen"
        android:layout_width="150px"
        android:layout_height="80px"
        android:layout_marginStart="335px"
        android:layout_marginTop="900px"
        android:visibility="visible" />

    <Button
        android:id="@+id/saeubern"
        android:layout_width="150px"
        android:layout_height="80px"
        android:layout_marginStart="560px"
        android:layout_marginTop="900px"
        android:text="Säubern" />

    <TextView
        android:id="@+id/textViewEssen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/textViewSchalfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300px"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/textViewSauber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="620px"
        android:textSize="30sp"></TextView>
    <TextView
        android:id="@+id/textViewHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:textSize="30sp"></TextView>
</RelativeLayout>